<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kasirin.ui.controller.AddProductController" styleClass="create-store-container" alignment="CENTER" spacing="20.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
        <VBox alignment="CENTER" spacing="25.0" styleClass="create-store-form">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <!-- Header -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Add New Product" styleClass="title" />
                <Label text="Create a new product with variations for your store" styleClass="subtitle" />
            </VBox>

            <!-- Product Information Section -->
            <VBox spacing="20.0">
                <Label text="Product Information" styleClass="section-title" />

                <VBox spacing="15.0">
                    <VBox spacing="6.0">
                        <Label text="Product Name *" styleClass="field-label" />
                        <TextField fx:id="nameField" promptText="Enter product name" styleClass="text-field" />
                    </VBox>

                    <HBox spacing="15.0">
                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Category *" styleClass="field-label" />
                            <TextField fx:id="categoryField" promptText="Enter product category" styleClass="text-field" />
                        </VBox>

                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Base Price *" styleClass="field-label" />
                            <TextField fx:id="basePriceField" promptText="Enter base price (e.g., 25000)" styleClass="text-field" />
                        </VBox>
                    </HBox>

                    <VBox spacing="6.0">
                        <Label text="Description" styleClass="field-label" />
                        <TextArea fx:id="descriptionArea" promptText="Enter product description (optional)" prefRowCount="3" styleClass="text-area" wrapText="true" />
                    </VBox>

                    <VBox spacing="6.0">
                        <Label text="Image URL" styleClass="field-label" />
                        <TextField fx:id="imageUrlField" promptText="Enter image URL (optional)" styleClass="text-field" />
                    </VBox>
                </VBox>
            </VBox>

            <Separator />

            <!-- Product Variations Section -->
            <VBox spacing="20.0">
                <Label text="Product Variations" styleClass="section-title" />

                <!-- Add Variation Form -->
                <VBox spacing="15.0" styleClass="variation-form">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>

                    <Label text="Add Variation" styleClass="subsection-title" />

                    <HBox spacing="10.0">
                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Type *" styleClass="field-label-small" />
                            <TextField fx:id="variationTypeField" promptText="e.g., Size, Color" styleClass="text-field-small" />
                        </VBox>

                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Value *" styleClass="field-label-small" />
                            <TextField fx:id="variationValueField" promptText="e.g., Large, Red" styleClass="text-field-small" />
                        </VBox>

                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Stock *" styleClass="field-label-small" />
                            <TextField fx:id="variationStockField" promptText="e.g., 50" styleClass="text-field-small" />
                        </VBox>

                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                            <Label text="Additional Price" styleClass="field-label-small" />
                            <TextField fx:id="variationPriceField" promptText="e.g., 5000" styleClass="text-field-small" />
                        </VBox>

                        <VBox spacing="6.0" alignment="BOTTOM_CENTER">
                            <Button fx:id="addVariationBtn" text="Add" onAction="#handleAddVariation" styleClass="small-button" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Variations Table -->
                <VBox spacing="10.0">
                    <Label text="Product Variations List" styleClass="subsection-title" />

                    <TableView fx:id="variationsTable" prefHeight="200.0" styleClass="variations-table">
                        <columns>
                            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100.0" />
                            <TableColumn fx:id="valueColumn" text="Value" prefWidth="100.0" />
                            <TableColumn fx:id="stockColumn" text="Stock" prefWidth="80.0" />
                            <TableColumn fx:id="priceColumn" text="Additional Price" prefWidth="120.0" />
                            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="80.0" />
                        </columns>
                        <placeholder>
                            <Label text="No variations added yet. Add at least one variation to continue." />
                        </placeholder>
                    </TableView>
                </VBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="15.0" alignment="CENTER">
                <Button fx:id="saveButton" text="Save Product" onAction="#handleSave" styleClass="primary-button" />
                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="secondary-button" />
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>
