            <VBox styleClass="store-header" spacing="10.0">
                <padding>
                    <Insets bottom="20.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                <Label fx:id="storeNameLabel" text="Store Name" styleClass="store-name" />
                <Label fx:id="storeTypeLabel" text="Store Type" styleClass="store-type" />
                <Separator />
            </VBox>

            <!-- Navigation Menu -->
            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                <Button fx:id="dashboardBtn" text="ðŸ“Š Dashboard" onAction="#showDashboard" styleClass="sidebar-button, active" maxWidth="Infinity" />
