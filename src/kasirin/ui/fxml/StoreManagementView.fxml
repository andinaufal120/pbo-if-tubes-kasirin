                <Button fx:id="transactionsBtn" text="ðŸ’³ Transactions" onAction="#showTransactions" styleClass="sidebar-button" maxWidth="Infinity" />
                <Button fx:id="reportsBtn" text="ðŸ“ˆ Reports" onAction="#showReports" styleClass="sidebar-button" maxWidth="Infinity" />

                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS" />

                <!-- Bottom Actions -->
                <Separator />
                <Button fx:id="settingsBtn" text="âš™ï¸ Settings" onAction="#showSettings" styleClass="sidebar-button" maxWidth="Infinity" />
                <Button fx:id="backBtn" text="â† Back to Main" onAction="#backToMain" styleClass="sidebar-button, secondary" maxWidth="Infinity" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Content will be dynamically loaded here -->
        </StackPane>
    </center>
</BorderPane>
