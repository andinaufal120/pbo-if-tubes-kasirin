<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kasirin.ui.controller.StoreManagementController" styleClass="store-management-container">

    <!-- Sidebar -->
